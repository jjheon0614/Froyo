<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/emoji_background">

    <!-- Your existing layout code -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emoji Store"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/emoji_title"
        android:layout_marginBottom="10dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp">

        <TableRow>

            <LinearLayout
                android:id="@+id/emoji7Layout"
                android:layout_width="0dp"
                android:layout_height="181dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/emoji_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/emoji7"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/emoji_icon" />

                <Button
                    android:id="@+id/purchaseButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emoji8Layout"
                android:layout_width="0dp"
                android:layout_height="182dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/emoji_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/emoji8"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/emoji_icon" />

                <Button
                    android:id="@+id/purchaseButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase" />

            </LinearLayout>

        </TableRow>


        <TableRow>

            <LinearLayout
                android:id="@+id/emoji9Layout"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/emoji_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/emoji9"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/emoji_icon" />

                <Button
                    android:id="@+id/purchaseButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emoji10Layout"
                android:layout_width="0dp"
                android:layout_height="181dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/emoji_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/emoji10"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/emoji_icon" />

                <Button
                    android:id="@+id/purchaseButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>
